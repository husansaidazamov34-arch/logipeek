# Multi-stage build for fullstack deployment
FROM node:20-alpine AS frontend-build

# Frontend build
WORKDIR /app/frontend
COPY logipeek_frontend/package*.json ./
RUN npm install
COPY logipeek_frontend/ ./
RUN npm run build

# Backend build
FROM node:20-alpine AS backend-build

WORKDIR /app/backend
COPY logipeek_backend/package*.json ./
RUN npm install
COPY logipeek_backend/ ./
RUN npm run build

# Final stage - serve both frontend and backend
FROM node:20-alpine

WORKDIR /app

# Copy backend build
COPY --from=backend-build /app/backend/dist ./backend/dist
COPY --from=backend-build /app/backend/node_modules ./backend/node_modules
COPY --from=backend-build /app/backend/package*.json ./backend/

# Copy frontend build
COPY --from=frontend-build /app/frontend/dist ./frontend/dist

# Create package.json for proxy server
RUN echo '{"name":"logipeek-proxy","version":"1.0.0","dependencies":{"express":"^4.18.2","http-proxy-middleware":"^2.0.6"}}' > package.json

# Install proxy dependencies
RUN npm install

# Create server.js for proxy
RUN cat > server.js << 'EOF'
const express = require('express');
const { createProxyMiddleware } = require('http-proxy-middleware');
const path = require('path');
const { spawn } = require('child_process');
const fs = require('fs');

const app = express();
const PORT = process.env.PORT || 3000;
const BACKEND_PORT = 5001; // Backend'ni 5001 portda ishlatamiz

console.log('ðŸš€ Starting LogiPeek Fullstack...');
console.log(`ðŸ“¡ Proxy will run on port: ${PORT}`);
console.log(`ðŸ”§ Backend will run on port: ${BACKEND_PORT}`);

// Check frontend files
const frontendPath = path.join(__dirname, 'frontend/dist');
const indexPath = path.join(frontendPath, 'index.html');

console.log('ðŸ“ Frontend path:', frontendPath);
console.log('ðŸ“„ Index.html exists:', fs.existsSync(indexPath));

if (fs.existsSync(frontendPath)) {
  const files = fs.readdirSync(frontendPath);
  console.log('ðŸ“‚ Frontend files:', files.slice(0, 5)); // Show first 5 files
}

// Start backend server
console.log(`ðŸ”§ Starting backend server on port ${BACKEND_PORT}...`);
const backend = spawn('node', ['backend/dist/main.js'], {
  cwd: '/app',
  stdio: ['pipe', 'pipe', 'pipe'],
  env: { ...process.env, PORT: BACKEND_PORT.toString() }
});

backend.stdout.on('data', (data) => {
  console.log(`[Backend] ${data.toString().trim()}`);
});

backend.stderr.on('data', (data) => {
  console.error(`[Backend Error] ${data.toString().trim()}`);
});

backend.on('error', (err) => {
  console.error('âŒ Backend spawn error:', err);
});

backend.on('exit', (code) => {
  console.log(`âŒ Backend exited with code: ${code}`);
});

// Wait for backend to start
console.log('â³ Waiting for backend to start...');
setTimeout(() => {
  console.log('ðŸŒ Starting proxy server...');
  
  // Test backend connection
  const http = require('http');
  const testReq = http.get(`http://localhost:${BACKEND_PORT}/health`, (res) => {
    console.log(`âœ… Backend health check: ${res.statusCode}`);
  }).on('error', (err) => {
    console.error('âŒ Backend health check failed:', err.message);
  });
  
  // Proxy API requests to backend
  app.use('/api', createProxyMiddleware({
    target: `http://localhost:${BACKEND_PORT}`,
    changeOrigin: true,
    logLevel: 'info',
    onProxyReq: (proxyReq, req, res) => {
      console.log(`ðŸ”„ Proxying ${req.method} ${req.url} to backend`);
    },
    onProxyRes: (proxyRes, req, res) => {
      console.log(`âœ… Backend responded with ${proxyRes.statusCode} for ${req.url}`);
    },
    onError: (err, req, res) => {
      console.error('âŒ Proxy error:', err.message);
      if (!res.headersSent) {
        res.status(502).json({ 
          error: 'Backend not available', 
          details: err.message,
          backend: `http://localhost:${BACKEND_PORT}`
        });
      }
    }
  }));

  // Proxy WebSocket connections to backend
  app.use('/socket.io', createProxyMiddleware({
    target: `http://localhost:${BACKEND_PORT}`,
    changeOrigin: true,
    ws: true, // Enable WebSocket proxying
    logLevel: 'info',
    onProxyReq: (proxyReq, req, res) => {
      console.log(`ðŸ”„ Proxying WebSocket ${req.url} to backend`);
    },
    onError: (err, req, res) => {
      console.error('âŒ WebSocket proxy error:', err.message);
    }
  }));

  // Health check endpoint
  app.get('/health', (req, res) => {
    res.json({ 
      status: 'OK', 
      timestamp: new Date().toISOString(),
      message: 'LogiPeek Fullstack running',
      backend: `http://localhost:${BACKEND_PORT}`,
      frontend: `http://localhost:${PORT}`,
      frontendExists: fs.existsSync(indexPath)
    });
  });

  // Serve frontend static files
  if (fs.existsSync(frontendPath)) {
    console.log('âœ… Serving frontend from:', frontendPath);
    app.use(express.static(frontendPath, {
      index: false,
      setHeaders: (res, path) => {
        if (path.endsWith('.css')) {
          res.setHeader('Content-Type', 'text/css');
        }
        if (path.endsWith('.js')) {
          res.setHeader('Content-Type', 'application/javascript');
        }
      }
    }));
    
    // Handle React Router
    app.get('*', (req, res) => {
      if (req.path.startsWith('/api/')) {
        return res.status(404).json({ error: 'API endpoint not found' });
      }
      console.log(`ðŸ“„ Serving index.html for: ${req.path}`);
      res.sendFile(indexPath);
    });
  } else {
    console.error('âŒ Frontend files not found');
    app.get('*', (req, res) => {
      res.status(404).json({ 
        error: 'Frontend files not found',
        path: frontendPath
      });
    });
  }

  app.listen(PORT, '0.0.0.0', () => {
    console.log(`ðŸŒ Fullstack app running on port ${PORT}`);
    console.log(`ðŸ“± Frontend: http://localhost:${PORT}`);
    console.log(`ðŸ”§ API: http://localhost:${PORT}/api/v1`);
    console.log(`ðŸ”§ Backend: http://localhost:${BACKEND_PORT}`);
  });
}, 10000); // 10 soniya kutamiz

// Handle process termination
process.on('SIGTERM', () => {
  console.log('Shutting down...');
  backend.kill();
  process.exit(0);
});

process.on('SIGINT', () => {
  console.log('Shutting down...');
  backend.kill();
  process.exit(0);
});
EOF

EXPOSE 3000

CMD ["node", "server.js"]